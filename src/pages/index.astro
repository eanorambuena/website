---
import Layout from "@components/layout.astro";

type Uni = {
  name: string;
  logo_uni: string;
  logo_os: string;
  link: string;
};

const universities: Uni[] = [
  {
    name: "usach",
    logo_uni: "/placeholder.svg",
    logo_os: "/placeholder.svg",
    link: "https://google.com",
  },
  {
    name: "puc",
    logo_uni: "/placeholder.svg",
    logo_os: "/placeholder.svg",
    link: "https://google.com",
  },
  {
    name: "uch",
    logo_uni: "/placeholder.svg",
    logo_os: "/placeholder.svg",
    link: "https://google.com",
  },
];
---

<Layout>
  <main class="mx-auto mt-20 flex w-fit flex-col items-center gap-10">
    <h1 class="text-7xl font-semibold">OSEC</h1>
    <img src="/osec_logo.svg" alt="osec logo" class="size-32" />
    <div class="flex gap-4">
      {
        universities.map((uni: Uni) => (
          <a
            class="flex w-16 flex-col items-center gap-2 border p-4 hover:ring"
            href={uni.link}
          >
            <h2>{uni.name}</h2>
            <img
              class="size-full"
              src={uni.logo_uni}
              alt={uni.name + " logo"}
            />
            <img
              class="size-full"
              src={uni.logo_os}
              alt={uni.name + "os organization logo"}
            />
          </a>
        ))
      }
    </div>
    <article class="w-1/2 text-center text-4xl">
      <p>
        osec es un esfuerzo inter-unviersitario en unir a los pregrados de
        ciencias de la computaci√≥n en la iniciativa open source, esto mediante
        proyectos en beneficio de todas las unviersidades
      </p>
    </article>
  </main>
</Layout>
